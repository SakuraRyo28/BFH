<?xml version="1.0" encoding="UTF-8"?>
<XMLDB PATH="local/quest/db" VERSION="20240115">
  <TABLES>
    <TABLE NAME="local_quest" COMMENT="Quests definition">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="courseid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true"/>
        <FIELD NAME="description" TYPE="text" NOTNULL="false"/>
        <FIELD NAME="instructions" TYPE="text" NOTNULL="false"/>
        <FIELD NAME="points" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="100"/>
        <FIELD NAME="required_action" TYPE="char" LENGTH="100" NOTNULL="true"/>
        <FIELD NAME="required_value" TYPE="char" LENGTH="255" NOTNULL="false"/>
        <FIELD NAME="prerequisite" TYPE="int" LENGTH="10" NOTNULL="false" DEFAULT="0"/>
        <FIELD NAME="sortorder" TYPE="int" LENGTH="5" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="course" TYPE="foreign" FIELDS="courseid" REFTABLE="course" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
    
    <TABLE NAME="local_quest_progress" COMMENT="User progress on quests">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="questid" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="status" TYPE="int" LENGTH="2" NOTNULL="true" DEFAULT="0" COMMENT="0=locked,1=available,2=completed"/>
        <FIELD NAME="datecompleted" TYPE="int" LENGTH="10" NOTNULL="false"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="user_quest" TYPE="unique" FIELDS="userid, questid"/>
        <KEY NAME="userid" TYPE="foreign" FIELDS="userid" REFTABLE="user" REFFIELDS="id"/>
        <KEY NAME="questid" TYPE="foreign" FIELDS="questid" REFTABLE="local_quest" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
    
    <TABLE NAME="local_quest_user" COMMENT="User stats and levels">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="courseid" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="totalpoints" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="currentlevel" TYPE="int" LENGTH="5" NOTNULL="true" DEFAULT="1"/>
        <FIELD NAME="levelpoints" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="user_course" TYPE="unique" FIELDS="userid, courseid"/>
      </KEYS>
    </TABLE>
  </TABLES>
</XMLDB>
